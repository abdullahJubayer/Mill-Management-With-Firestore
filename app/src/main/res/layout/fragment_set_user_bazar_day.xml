<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.SetUserBazarDayFragment"
    >

        <TextView
            android:id="@+id/saturday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="15dp"
            android:text="Saturday"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/saturday_selection"
            />

        <Spinner
            android:id="@+id/saturday_selection"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:padding="15dp"
            app:layout_constraintStart_toEndOf="@id/saturday"
            app:layout_constraintTop_toTopOf="@id/saturday"
            app:layout_constraintBottom_toBottomOf="@id/saturday"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <TextView
        android:id="@+id/sunday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="Sunday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saturday_selection"
        app:layout_constraintEnd_toStartOf="@id/sunday_selection"
        />

    <Spinner
        android:id="@+id/sunday_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@id/sunday"
        app:layout_constraintTop_toTopOf="@id/sunday"
        app:layout_constraintBottom_toBottomOf="@id/sunday"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/monday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="Monday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sunday_selection"
        app:layout_constraintEnd_toStartOf="@id/monday_selection"
        />

    <Spinner
        android:id="@+id/monday_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@id/monday"
        app:layout_constraintTop_toTopOf="@id/monday"
        app:layout_constraintBottom_toBottomOf="@id/monday"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tuesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="Tuesday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monday_selection"
        app:layout_constraintEnd_toStartOf="@id/tuesday_selection"
        />

    <Spinner
        android:id="@+id/tuesday_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@id/tuesday"
        app:layout_constraintTop_toTopOf="@id/tuesday"
        app:layout_constraintBottom_toBottomOf="@id/tuesday"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/wednesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="Wednesday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tuesday_selection"
        app:layout_constraintEnd_toStartOf="@id/wednesday_selection"
        />

    <Spinner
        android:id="@+id/wednesday_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@id/wednesday"
        app:layout_constraintTop_toTopOf="@id/wednesday"
        app:layout_constraintBottom_toBottomOf="@id/wednesday"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/thursday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="Thursday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wednesday_selection"
        app:layout_constraintEnd_toStartOf="@id/thursday_selection"
        />

    <Spinner
        android:id="@+id/thursday_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@id/thursday"
        app:layout_constraintTop_toTopOf="@id/thursday"
        app:layout_constraintBottom_toBottomOf="@id/thursday"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/friday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="Friday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thursday_selection"
        app:layout_constraintEnd_toStartOf="@id/friday_selection"
        />

    <Spinner
        android:id="@+id/friday_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@id/friday"
        app:layout_constraintTop_toTopOf="@id/friday"
        app:layout_constraintBottom_toBottomOf="@id/friday"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/save_btn"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>